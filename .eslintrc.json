{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "rules": {
        "no-console": "off",
        "linebreak-style": [
            "error",
            "windows"
        ],
        "no-underscore-dangle": [
            "error",
            {
                "allow": [
                    "_service",
                    "_validator",
                    "_pool",
                    "_usersService",
                    "_tokenManager",
                    "_playlistsService",
                    "_songsService",
                    "_activitiesService",
                    "_collaborationsService"
                ]
            }
        ]
    }
}